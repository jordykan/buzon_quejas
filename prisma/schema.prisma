generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Report {
  id        String   @id @default(uuid())
  fullName  String?
  category  String
  area      String
  message   String
  fileUrl   String?
  createdAt DateTime @default(now())
}
